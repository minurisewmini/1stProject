<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header: User Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile1" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="10dp">

                    <!-- Name row with edit icon -->
                    <LinearLayout
                        android:id="@+id/rowName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jack Thomas"
                            android:textColor="#111111"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/ivEdit"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="15dp"
                            android:clickable="true"
                            android:contentDescription="Edit name"

                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/edit"
                            app:tint="#111111" />
                    </LinearLayout>

                    <!-- Email (unchanged) -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jack1@gmail.com"
                        android:textColor="#666666"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/search"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:tint="#111111" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/menu"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:tint="#111111" />

            </LinearLayout>

            <!-- Pet Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FFE0B3"
                android:padding="12dp"
                android:layout_marginTop="12dp"
                android:elevation="4dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MY PET ID"
                    android:textSize="22sp"                    android:textStyle="bold"
                    android:textColor="#6A4E42"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dexter"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#111111"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Labrador"
                    android:textSize="18sp"                    android:textColor="#444444"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adopted"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#E53935"
                    style="@style/Widget.MaterialComponents.Button.TextButton"/>
            </LinearLayout>


            <ImageView
                    android:layout_width="150dp"
                    android:layout_height="136dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile2" />
            </LinearLayout>

            <!-- Pet Stats -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Age\n3 Years"
                    android:gravity="center"
                    android:background="#C8E6C9"
                    android:padding="12dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Gender\nMale"
                    android:gravity="center"
                    android:background="#FFF59D"
                    android:padding="12dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Weight\n43 KG"
                    android:gravity="center"
                    android:background="#FFCDD2"
                    android:padding="12dp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Appointments -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Appointments"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:textColor="#111111"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/border_black"
                    android:padding="12dp"
                    android:elevation="2dp"
                    android:layout_marginBottom="8dp">


                <TextView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:text="AUG\n08th"
                        android:gravity="center"
                        android:background="#E53935"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Grooming"
                            android:textStyle="bold"
                            android:textSize="18sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3:00 PM"
                            android:textColor="#555555"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/border_black"
                    android:padding="12dp"
                    android:elevation="2dp"
                    android:layout_marginBottom="8dp">


                <TextView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:text="OCT\n28th"
                        android:gravity="center"
                        android:background="#E53935"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Veterinarian"
                            android:textStyle="bold"
                            android:textSize="18sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10:00 AM"
                            android:textColor="#555555"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Reminders -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Reminders"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:textColor="#111111"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#FFE0B3"
                    android:padding="12dp"
                    android:elevation="2dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/bell"
                        app:tint="#000000"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Walk Dexter"
                            android:textStyle="bold"
                            android:textSize="18sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Daily  8:15AM   2:45PM   7:00PM"
                            android:textColor="#555555"/>
                    </LinearLayout>

                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:thumbTint="#000000"
                        android:trackTint="#80000000"/> <!-- 50% transparent black -->

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_gravity="bottom"
        android:background="#E6E6E6"
        app:elevation="8dp"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/menu_bottom_nav" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
